<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:keepScreenOn="true">

    <!-- 
        Container for 3D mode components (3840x1080)
        This will be used in right eye when in 3D mode
     -->
    <FrameLayout
        android:id="@+id/container_3d"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <!-- 
        Container for 2D mode components (1920x1080)
        This will be used for both eyes when in 2D mode
     -->
    <FrameLayout
        android:id="@+id/container_2d"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</FrameLayout>
